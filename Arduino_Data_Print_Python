import serial

# Set up the serial connection to the Arduino
ser = serial.Serial('COM9', 9600)

while True:
    # Read the data from the Arduino
    data = ser.readline().decode('latin1', errors='ignore').rstrip()

    # Split the data into separate values based on the comma separator
    values = data.split(',')

    # Convert the values to integers
    try:
        status, pitch, roll, yaw = map(int, values)
    except ValueError as e:
        print(f"Error converting values to integers: {e}")
        continue
    # Print out the values
    print(f"Status: {status}, Pitch: {pitch}, Roll: {roll}, Yaw: {yaw}")

