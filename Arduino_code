#include <Wire.h>
#include <MPU6050.h>
MPU6050 mpu;

unsigned long timer = 0;
float timeStep = 0.01;
float pitch = 0;
float roll = 0;
float yaw = 0;
int status;

void setup() {
  Serial.begin(115200);
  pinMode(6, INPUT);
  while (!mpu.begin(MPU6050_SCALE_2000DPS, MPU6050_RANGE_2G)) {
    Serial.println("Could not find a valid MPU6050 sensor, check wiring!");
    delay(500);
  }
  mpu.calibrateGyro();
}
void loop() {
  timer = millis();
  Vector norm = mpu.readNormalizeGyro();
  pitch = pitch + norm.YAxis * timeStep;
  roll = roll + norm.XAxis * timeStep;
  yaw = yaw + norm.ZAxis * timeStep;
  status = digitalRead(6);
  delay((timeStep * 1000) - (millis() - timer));
  Serial.print(float(status));
  Serial.print(" ");
  Serial.print(float(pitch*-1));
  Serial.print("");
  Serial.print(float(roll));
  Serial.print("");
  Serial.print(float(yaw*-1));
  Serial.print(" ");
  Serial.println();
}
